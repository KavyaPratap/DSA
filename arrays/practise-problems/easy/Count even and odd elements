/*Core logic used-->
first declare odd_count=0 and even_count=0
then iterate array and check if arr[i]%2==0
if yes then even_count++ else odd_count++
return even_count and odd_count
*/

#include <iostream>
using namespace std;
int main() {
    int arr[] = {1, 2, 3, 4, 5, 6};
    int n = sizeof(arr)/sizeof(arr[0]);
    int odd_count = 0, even_count = 0;
    for(int i = 0; i < n; i++) {
        if(arr[i] % 2 == 0)
            even_count++;
        else
            odd_count++;
    }
    cout << "Even elements: " << even_count << endl;
    cout << "Odd elements: " << odd_count << endl;
}

